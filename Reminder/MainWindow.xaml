<Window x:Class="Reminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reminder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menuMain" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="215">
            <MenuItem Header="_File">
                <MenuItem  Name="mnuExit" Header="E_xit" Click="mnuExit_Click"/>
            </MenuItem>
            <MenuItem Visibility="Hidden"/>
        </Menu>
        <Menu Name="mnuHlp" VerticalAlignment="Top" HorizontalAlignment="Right">
            <MenuItem Name="mnuHelp" Header="_Help" Click="mnuHelp_Click"/>
        </Menu>
        <Label Name="lblAlertCount" Content="lblAlertCount" HorizontalAlignment="Left" Margin="290,0,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
